<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="50dip"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:paddingTop="20dip" >

    <TextView
        android:id="@+id/text_addalarm_2_show"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:background="@drawable/bg_edit"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_marginTop="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_addalarm_2_0"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/selecter_number_btn_bg"
            android:gravity="center"
            android:text="0" />

        <Button
            android:id="@+id/btn_addalarm_2_1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/selecter_number_btn_bg"
            android:gravity="center"
            android:text="1" />

        <Button
            android:id="@+id/btn_addalarm_2_2"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/selecter_number_btn_bg"
            android:gravity="center"
            android:text="2" />

        <Button
            android:id="@+id/btn_addalarm_2_3"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/selecter_number_btn_bg"
            android:gravity="center"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_addalarm_2_dot"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/selecter_number_btn_bg"
            android:gravity="center"
            android:text="." />

        <Button
            android:id="@+id/btn_addalarm_2_4"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/selecter_number_btn_bg"
            android:gravity="center"
            android:text="4" />

        <Button
            android:id="@+id/btn_addalarm_2_5"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/selecter_number_btn_bg"
            android:gravity="center"
            android:text="5" />

        <Button
            android:id="@+id/btn_addalarm_2_6"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/selecter_number_btn_bg"
            android:gravity="center"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_addalarm_2_c"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/selecter_number_btn_bg"
            android:gravity="center"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:text="C" />

        <Button
            android:id="@+id/btn_addalarm_2_7"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/selecter_number_btn_bg"
            android:gravity="center"
            android:text="7" />

        <Button
            android:id="@+id/btn_addalarm_2_8"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/selecter_number_btn_bg"
            android:gravity="center"
            android:text="8" />

        <Button
            android:id="@+id/btn_addalarm_2_9"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/selecter_number_btn_bg"
            android:gravity="center"
            android:text="9" />
    </LinearLayout>

</LinearLayout>