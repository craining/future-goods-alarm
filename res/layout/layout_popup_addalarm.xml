<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkgray"
    android:baselineAligned="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:background="@color/darkorange"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/img_pop_addalarm_pre"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_left" />

        <ImageView
            android:id="@+id/img_pop_addalarm_next"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_right" />

        <TextView
            android:id="@+id/text_pop_addalarm_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_pop_addalarm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_pop_addalarm_title_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:textColor="@color/black" />
    </RelativeLayout>

    <com.zgy.goldmonitor.views.CompatViewPager
        android:id="@+id/viewpager_pop_addalarm"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:duplicateParentState="true" />

</LinearLayout>